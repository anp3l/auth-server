# Environment (development, production, test)
NODE_ENV=development

# Enable detailed authentication logs
ENABLE_LOGS=false

# MongoDB connection string - update with your database name and credentials
MONGO_URI=mongodb://localhost:27017/authdb

# Server port
PORT=4000

# Base64-encoded private key for signing user identity tokens
PRIVATE_KEY_BASE64=your-base64-encoded-private-key

# Base64-encoded public key for verifying user identity tokens
PUBLIC_KEY_BASE64=your-base64-encoded-public-key

# JWT Token Expiry (optional, defaults provided)
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# CORS Allowed Origins (comma-separated, for production)
# ALLOWED_ORIGINS=https://your-frontend.com,https://admin.your-app.com
