# ============================================
#  AUTH SERVER - ENVIRONMENT CONFIGURATION
# ============================================

# === SERVER CONFIGURATION ===
NODE_ENV=development
PORT=4000
ENABLE_LOGS=true

# === DATABASE ===
# Development (Docker)
MONGO_URI=mongodb://auth-mongo:27017/authdb

# === RSA KEYS (Required) ===
# Generate keys:
# openssl genrsa -out private.pem 2048
# openssl rsa -in private.pem -pubout -out public.pem
#
# Encode to Base64:
# Mac/Linux:  cat private.pem | base64 | tr -d '\n'
# Windows:    [Convert]::ToBase64String([IO.File]::ReadAllBytes("./private.pem"))

PRIVATE_KEY_BASE64=your_base64_encoded_private_key_here
PUBLIC_KEY_BASE64=your_base64_encoded_public_key_here

# === JWT CONFIGURATION ===
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# === EMAIL SERVICE ===
# Provider: mock (console only - for development)
EMAIL_PROVIDER=mock
EMAIL_FROM=noreply@yourapp.com

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:4200

# App Branding
APP_NAME=Your App Name
SUPPORT_EMAIL=support@yourapp.com

# === SECURITY ===
# CORS - Allowed origins (comma-separated, no spaces)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200